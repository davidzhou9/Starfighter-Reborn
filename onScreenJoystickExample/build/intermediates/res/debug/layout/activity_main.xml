<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/surfaceView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center" />
    <Button
        android:id="@+id/angry_btn"
        android:text="PLAY GAME"
        android:textColor="#82FF97"
        android:textSize="20sp"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/store"
        android:text="COMMAND POST"
        android:textColor="#ff5a4e"
        android:textSize="20sp"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/angry_btn" />

    <Button
        android:id="@+id/tutorial"
        android:text="TUTORIAL"
        android:textColor="#63deff"
        android:textSize="20sp"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignTop="@+id/store"
        android:layout_toRightOf="@+id/store"
        android:layout_toEndOf="@+id/store" />

    <Button
        android:id="@+id/about"
        android:text="ABOUT"
        android:textColor="#ff6ae3"
        android:textSize="20sp"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignTop="@+id/tutorial"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/tutorial"
        android:layout_toEndOf="@+id/tutorial" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="STARFIGHTER: REBORN"
        android:id="@+id/title"
        android:textSize="40dp"
        android:textColor="#53ff80"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout><!-- From: file:/H:/onScreenJoystickExample/onScreenJoystickExample/src/main/res/layout/activity_main.xml -->